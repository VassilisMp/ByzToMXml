<AnchorPane style="-fx-border-color: grey;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.FileController">
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
   </padding>
   <Button layoutX="568.0" mnemonicParsing="false" onAction="#closeOnAction" text="x" textFill="RED"
           AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
   <VBox alignment="TOP_CENTER" layoutX="264.0" layoutY="81.0" spacing="5.0" AnchorPane.bottomAnchor="0.0"
         AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="35.0">
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </padding>
      <TextField fx:id="fileNameText" editable="false"/>
      <AnchorPane>
         <CheckBox fx:id="timeBeatsCheck" mnemonicParsing="false" text="constant time beats"
                   AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0"/>
