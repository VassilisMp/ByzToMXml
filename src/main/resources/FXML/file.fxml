      </AnchorPane>
      <AnchorPane>
         <Button fx:id="converButton" mnemonicParsing="false" onAction="#convertOnAction" text="convert"
                 AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0"/>
         <Button fx:id="saveAsButton" disable="true" layoutX="543.0" mnemonicParsing="false"
                 onAction="#saveAsOnAction" text="save as" AnchorPane.bottomAnchor="0.0"
                 AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
      </AnchorPane>
   </VBox>
</AnchorPane>
